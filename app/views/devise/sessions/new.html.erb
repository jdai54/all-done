<div class="container">
  <body class="background">
    <div class="jumbotron" id="welcome">
      <h1>all done</h1>
      <p class="lead">Boost your productivity</p><br />

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %><br />
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>
        <%= link_to "Forgot password?", new_password_path(resource_name) %><br />

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", :class => 'btn btn-success' %>
          <%= link_to "Sign up", new_registration_path(resource_name), :class => 'btn btn-primary' %>
        </div><br />
      <% end %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
    </div>
  </body>
</div>
